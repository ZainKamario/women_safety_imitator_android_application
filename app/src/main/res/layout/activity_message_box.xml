<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light_white_color"
    tools:context=".create_report_activity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_set_H_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".1" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_set_H_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".09" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_set_H_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".93" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_set_V_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".157" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_set_V_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".08" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_set_V_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".24" />



    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="0.1dp"
        android:scaleType="fitXY"
        android:scaleX="1.05"
        android:scaleY="1.07"
        android:translationY="-2dp"
        android:background="@drawable/report_top_toolbar_shape"
        android:src="@drawable/ic_report_top_toolbar_shape"
        app:layout_constraintBottom_toTopOf="@+id/guideline_set_H_0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/recent_report_back_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:elevation="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/back_btn_icon"
        app:layout_constraintBottom_toTopOf="@+id/guideline_set_H_0"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/guideline_set_V_3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline_set_V_0"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:fontFamily="@font/opensans_semibold"
        android:text="Message Box"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/recent_report_back_btn"
        app:layout_constraintStart_toStartOf="@+id/guideline_set_V_4"
        app:layout_constraintTop_toTopOf="@+id/recent_report_back_btn" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/message_box_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/guideline_set_H_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_set_H_1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/message_bottom_box"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message_box_recycler">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_set_V_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".08" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_set_V_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".81" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_set_V_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".66" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_set_V_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".77" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shapeableImageView"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline_set_V_5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/shape_for_message_box" />

        <EditText
            android:id="@+id/message_box_edit_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginVertical="10dp"
            android:background="#00000000"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center|left"
            android:hint="Message"
            android:inputType="text"
            android:paddingStart="15dp"
            android:textColor="@color/lighter_text_color"
            android:textColorHighlight="@color/lighter_text_color_highlighter"
            android:textColorHint="@color/lighter_text_color_hint"
            android:textColorLink="@color/lighter_text_color"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline_set_V_6"
            app:layout_constraintStart_toStartOf="@+id/guideline_set_V_18"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/file_attach"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:visibility="invisible"
            android:src="@drawable/attach_file_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/guideline_set_V_7"
            app:layout_constraintStart_toStartOf="@+id/guideline_set_V_6"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/send_message_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:src="@drawable/message_send"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/shapeableImageView"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>