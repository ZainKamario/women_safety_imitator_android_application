<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lighter_backround_color"
    tools:context=".create_report_page_2">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_set_V_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".08" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_set_V_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".92" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_set_V_17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".64" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_set_H_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".054" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_set_H_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".12" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_set_H_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".12" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_set_H_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".47" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_set_H_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".61" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_set_H_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".8" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_set_H_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".738" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 2 of 2"
        android:fontFamily="@font/op_sn_bold"
        android:textSize="20sp"
        android:textColor="@color/lighter_text_color"
        app:layout_constraintStart_toStartOf="@+id/guideline_set_V_0"
        app:layout_constraintTop_toTopOf="@+id/guideline_set_H_0" />

    <EditText
        android:id="@+id/report_data_edit_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ic_rectangle_shape_for_report_edit_text_box"
        android:fontFamily="@font/opensans_semibold"
        android:gravity="left|top"
        android:hint="Could you please write the\nreport here briefly....."
        android:padding="15dp"

        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline_set_H_8"
        app:layout_constraintEnd_toStartOf="@+id/guideline_set_V_1"
        app:layout_constraintStart_toStartOf="@+id/guideline_set_V_0"
        app:layout_constraintTop_toTopOf="@+id/guideline_set_H_7" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="2"
        android:padding="5dp"

        app:layout_constraintBottom_toTopOf="@+id/guideline_set_H_2"
        app:layout_constraintEnd_toStartOf="@+id/guideline_set_V_1"
        app:layout_constraintStart_toStartOf="@+id/guideline_set_V_0"
        app:layout_constraintTop_toTopOf="@+id/guideline_set_H_8" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/option_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            >
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_set_V_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".15" />

            <ImageView
                android:id="@+id/option_1_img"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_report_check_checked"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toStartOf="@+id/guideline_set_V_5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fontFamily="@font/op_sn_bold"
                android:layout_marginStart="10dp"
                android:gravity="center|left"
                android:text="agree our term and conditions"
                android:textColor="@color/lighter_text_color"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="@+id/option_1_img"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline_set_V_5"
                app:layout_constraintTop_toTopOf="@+id/option_1_img" />



        </androidx.constraintlayout.widget.ConstraintLayout>




    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/report_submit_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline_set_H_6"
        app:layout_constraintEnd_toStartOf="@+id/guideline_set_V_1"
        app:layout_constraintStart_toStartOf="@+id/guideline_set_V_17"
        app:layout_constraintTop_toTopOf="@+id/guideline_set_H_9">

        <ImageView
            android:id="@+id/imageView23"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/next_button_report_create"
            android:src="@drawable/ic_next_button_report_create"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center"
            android:text="SUBMIT"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="19sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView23"
            app:layout_constraintEnd_toEndOf="@+id/imageView23"
            app:layout_constraintStart_toStartOf="@+id/imageView23"
            app:layout_constraintTop_toTopOf="@+id/imageView23" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>